            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv1"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="@string/txt_lv1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@drawable/ic_ready"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ln_rule_main"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@drawable/ic_telephone1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ln_rule_main"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_50"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_20"
        android:src="@drawable/ic_50"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/iv_phone"
        app:layout_constraintEnd_toEndOf="@id/iv_phone"
        app:layout_constraintStart_toStartOf="@id/iv_phone" />

    <ImageView
        android:id="@+id/iv_percent"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:src="@drawable/ic_percent1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/iv_phone"
        app:layout_constraintStart_toStartOf="@id/iv_phone"
        app:layout_constraintTop_toBottomOf="@id/iv_phone" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@anim/circle_rotate_zin"
        android:indeterminateDuration="12000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>