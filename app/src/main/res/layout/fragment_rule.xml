<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fr_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_name" />

    <ImageView
        android:id="@+id/iv_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_5"
        android:src="@drawable/ic_altprule"
        app:layout_constraintBottom_toTopOf="@id/ln_rule_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/ln_rule_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_name">

        <TextView
            android:id="@+id/tv_lv15"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/lv15"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="@string/txt_lv15"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lv14"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv14"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="@string/txt_lv14"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_lv13"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv13"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="@string/txt_lv13"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_lv12"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv12"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="@string/txt_lv12"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_lv11"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv11"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="@string/txt_lv11"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_lv10"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv10"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/txt_lv10"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lv9"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv9"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="@string/txt_lv9"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_lv8"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv8"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="@string/txt_lv8"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_lv7"
