            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv7"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="@string/txt_lv7"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_lv6"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv6"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="@string/txt_lv6"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_lv5"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv5"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/txt_lv5"
            android:textColor="@color/yellow"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lv4"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv4"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="@string/txt_lv4"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_lv3"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv3"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="@string/txt_lv3"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_lv2"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/lv2"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="@string/txt_lv2"
