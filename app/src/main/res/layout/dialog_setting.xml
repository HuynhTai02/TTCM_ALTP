<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/dp_5"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/bg"
        android:fontFamily="@font/alata_regular"
        android:gravity="center"
        android:text="@string/txt_setting"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grayLight"
        android:gravity="center"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_music"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_40"
            android:text="Nhạc nền"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22"
            tools:ignore="HardcodedText" />

        <ImageView
            android:padding="5dp"
            android:id="@+id/iv_on_music"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_20"
            android:src="@drawable/bg_setting"
            tools:ignore="ContentDescription" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grayLight"
        android:gravity="center"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/ic_voice"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="Giọng đọc"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22"
            tools:ignore="HardcodedText" />

        <ImageView
            android:padding="@dimen/dp_5"
            android:id="@+id/iv_reading_on"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_50"
            android:src="@drawable/bg_setting"
            tools:ignore="ContentDescription" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grayLight"
        android:gravity="center"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_dark"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:text="Giao diện tối"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/iv_on_dark"
            android:padding="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_30"
            android:src="@drawable/bg_setting_dark"
            tools:ignore="ContentDescription" />
    </TableRow>

</LinearLayout>